<?xml version="1.0" encoding="utf-8"?>
<views:SettingsPanel xmlns:fx="http://ns.adobe.com/mxml/2009" 
					 xmlns:s="library://ns.adobe.com/flex/spark" 
					 xmlns:mx="library://ns.adobe.com/flex/mx"
					 xmlns:views="toolbox.views.*"
					 width="280" height="136" creationPolicy="all"
					 title="设置"
					 creationComplete="creationCompleteHandler(event)"
					 >
	
	<fx:Declarations>
		<s:RadioButtonGroup id="appType"/>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<s:Label x="30" y="19" text="项目类型："/>
	<s:RadioButton x="90" y="15" label="ActionScript" groupName="appType" value="1" />
	<s:RadioButton x="195" y="15" label="HTML5" groupName="appType" value="2" />
	
	<s:Button id="saveBtn" x="110" y="60" width="60" height="25" label="保存"
			  click="saveBtn_clickHandler(event)"/>
</views:SettingsPanel>
