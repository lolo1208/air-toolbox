<?xml version="1.0" encoding="utf-8"?>
<sg:StyleGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark" 
				 xmlns:mx="library://ns.adobe.com/flex/mx"
				 xmlns:sg="app.groups.styleGroup.*"
				 width="100%" height="100%"
				 creationComplete="creationCompleteHandler(event)"
				 addedToStage="addedToStageHandler(event)"
				 resize="resizeHandler(event)"
				 >
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	
	<s:Scroller id="scroller" width="100%" height="100%">
		<s:VGroup id="listVG" width="100%" height="100%" gap="-1">
			
			<sg:HeadGroup id="headG" />
			
			<sg:TextFieldGroup id="textFieldG" />
			<sg:LabelGroup id="labelG" />
			<sg:NumberTextGroup id="numberTextG" />
			
			<sg:HitAreaPaddingTextGroup id="hitAreaPaddingTextG" />
			<sg:AutoSizeGroup id="autoSizeG" />
			<sg:PaddingGroup id="paddingG" />
			<sg:ButtonLabelGroup id="buttonLabelG" />
			<sg:ImagePrefixGroup id="imagePrefixG" />
			
			<sg:ScrollBarGroup id="scrollBarG" />
			
			
		</s:VGroup>
	</s:Scroller>
	
</sg:StyleGroup>
