<?xml version="1.0" encoding="utf-8"?>
<layerGroup:LayerGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:layerGroup="app.groups.layerGroup.*"
		 width="100%" height="100%"
		 creationComplete="creationCompleteHandler(event)"
		 resize="resizeHandler(event)"
		 >
	
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	
	<s:List id="layerList" x="1" labelField="name" borderVisible="false"
			itemRenderer="app.groups.layerGroup.LayerItemRenderer"
			dragEnabled="true" dropEnabled="true" dragMoveEnabled="true"
			horizontalScrollPolicy="off"
			requireSelection="false"
			dragEnter="layerList_dragEnterHandler(event)"
			dragStart="layerList_dragStartHandler(event)"
			dragComplete="layerList_dragCompleteHandler(event)"
			change="layerList_changeHandler(event)"
			/>
	
</layerGroup:LayerGroup>
